shopt -s extglob
#set -e

. /etc/pacopts/pacopts_functions


(( EUID == 0 )) || die " You must be run this script with root privileges"

if [[ -z "${2}" ]] && [[ "${1}" != @(origin|applytmp) ]]; then
	usage
	exit 1
fi


case "${1}" in
	origin)
		check_package
		;;
	applysys)
		parse_file "${sys_path}" "${2}"
		;;
	applytmp)
		tmpfiles
		;;
	*)
		usage
		exit 1
		;;
esac
exit 0

