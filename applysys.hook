[Trigger]
Type = File
Operation = Install
Operation = Upgrade
Target = usr/lib/sysusers.d/*.conf

[Action]
Description = Updating system user accounts...
When = PostTransaction
Depends = pacopts
Exec = /bin/sh -c 'for conf in $(ls /usr/lib/sysusers.d/); do /usr/bin/pacopts applysys "$conf" ; done'
NeedsTargets
